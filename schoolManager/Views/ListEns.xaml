<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:schoolManager.ViewModels"
             x:Class="schoolManager.Views.ListEns"
             Title="Liste des Enseignants">    
    <StackLayout Spacing="10" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
    <Label Text="{Binding Count}" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,5"/>
    <ListView ItemsSource="{Binding DisplayList}">
    <ListView.ItemTemplate>
        <DataTemplate>
            <TextCell Text="Binding FirstName">
            </TextCell>
        </DataTemplate>
    </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
</ContentPage>