<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:schoolManager.ViewModels"
             x:Class="schoolManager.Views.AddAct"
             Title="Ajouter des ActivitÃ©s">
      <StackLayout Spacing="10" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <Label Text="Create Activite" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,5"/>

        <Label Text="Teacher" FontSize="16" Margin="0,10,0,0"/>
        <Picker x:Name="teacherPicker" Title="Undefined" SelectedIndexChanged="OnTeacherSelectedIndexChanged"/>

        <Label Text="Name" FontSize="16" Margin="0,10,0,0"/>
        <Entry x:Name="nameEntry" Placeholder="Enter name"/>

        <Label Text="Code" FontSize="16" Margin="0,10,0,0"/>
        <Entry x:Name="codeEntry" Placeholder="Enter code"/>

        <Label Text="ECTS" FontSize="16" Margin="0,10,0,0"/>
        <Entry x:Name="ectsEntry" Placeholder="Enter ECTS" Keyboard="Numeric"/>

        <Button Text="Create" Clicked="OnCreateClicked" Margin="0,20,0,0"/>

    </StackLayout>
</ContentPage>