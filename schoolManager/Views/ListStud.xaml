<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:schoolManager.ViewModels"
             x:Class="schoolManager.Views.ListStud"
             Title="Liste des Élèves">   
    <ContentPage.BindingContext>
        <viewModels:ListStudVM />
    </ContentPage.BindingContext>
        <StackLayout Spacing="10" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label FontSize="22" FontAttributes="Bold" Text="{Binding Stud}" VerticalOptions="End" />
        <Button Text="Retour a la page Home" Clicked="Button_Home"/>
        </StackLayout>
</ContentPage>
