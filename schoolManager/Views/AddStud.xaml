<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:schoolManager.ViewModels"
             x:Class="schoolManager.Views.AddStud"
             Title="Ajouter des Etudiants">
    <StackLayout Spacing="10" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="First Name:" FontSize="20" HorizontalOptions="Start"/>
        <Entry x:Name="FirstNameEntry" Placeholder="Enter First Name" />

        <Label Text="Last Name:" FontSize="20" HorizontalOptions="Start" Margin="0,10,0,0"/>
        <Entry x:Name="LastNameEntry" Placeholder="Enter Last Name" />

        <Button Text="Create" Clicked="OnCreateClicked" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>
