<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:schoolManager.ViewModels"
             x:Class="schoolManager.Views.AddEns"
             Title="Ajouter des Enseignants">
     
     <StackLayout Spacing="10" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Salaire:" />
        <Entry x:Name="salaireEntry" Placeholder="Enter salaire" />

        <Label Text="First Name:" />
        <Entry x:Name="firstNameEntry" Placeholder="Enter First Name" />

        <Label Text="Last Name:" />
        <Entry x:Name="lastNameEntry" Placeholder="Enter Last Name" />

        <Button Text="Create" Clicked="OnCreateClicked" />
    </StackLayout>
</ContentPage>
